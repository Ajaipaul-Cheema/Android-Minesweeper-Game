<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hockeyhelp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/nameOfGame"
        android:textColor="@color/helpColor"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="475dp"
        android:layout_marginBottom="250dp"
        android:text="Hockey Cards Finder"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameDetails"
        android:textStyle="bold"
        android:layout_width="632dp"
        android:layout_height="56dp"
        android:textColor="@color/backgroundColor"
        android:layout_marginBottom="165dp"
        android:text="To play this game, click on blocks where you think there is a hidden hockey card. Until you find a hockey card, you will be given how many cards their are in that row or column. You can also click a hockey card to tell you the number of hockey cards in that row and column."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nameOfGame"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="Author for Project"
        android:textColor="@color/helpColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gameDetails"
        app:layout_constraintTop_toBottomOf="@+id/nameOfGame" />

    <TextView
        android:id="@+id/authorDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="@string/writtenBy"
        android:textColor="@color/backgroundColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/author"
        app:layout_constraintTop_toBottomOf="@+id/author" />

    <TextView
        android:id="@+id/cmpt276HomePage"
        android:layout_width="659dp"
        android:layout_height="46dp"
        android:layout_marginTop="125dp"
        android:text="@string/hyperlinkCMPT276"
        android:textAlignment="textStart"
        android:textColorLink="@color/backgroundColor"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/resourcesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="Resources"
        android:textColor="@color/helpColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/authorDetails" />

    <TextView
        android:id="@+id/clickResources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Click here for Citations:"
        android:textColor="@color/backgroundColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/citationsButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/citationsButton"
        android:textStyle="italic"
        android:layout_width="116dp"
        android:layout_height="37dp"
        android:layout_marginEnd="400dp"
        android:text="Citations"
        android:textColor="@color/black"
        app:iconTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="@+id/clickResources"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clickResources" />

</androidx.constraintlayout.widget.ConstraintLayout>